<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/receiverLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:background="@drawable/shape2"
            android:paddingRight="7dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Ch -1 Data Collection"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/receivetime"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:text="12:20"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp">

            <LinearLayout
                android:id="@+id/imageLayoutreceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/receverimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/receivetimeimage"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom|center|right"
                    android:text="12:20" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/senderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Ch -1 Data Collection"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sendtime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:text="12:20" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/msgsend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="bottom"
                    android:src="@drawable/send_msg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/msgreceive"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="bottom"
                    android:src="@drawable/receive_msg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/msgread"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="bottom"
                    android:src="@drawable/read_msg" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:id="@+id/imageLayoutsender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/senderimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/sendertimeimage"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:text="12:20" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/imagemsgsend"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="bottom"
                        android:src="@drawable/send_msg"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imagereceive"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="bottom"
                        android:src="@drawable/receive_msg"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imagemsgread"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="bottom"
                        android:src="@drawable/read_msg" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>